{
  "watch": {
    "build": {
      "patterns": [
        "posts"
      ],
      "extensions": "html",
      "quiet": false
    }
  },
  "scripts": {
    "build": "postcss static/css/main.css -o static/css/main.min.css; cp node_modules/htmx.org/dist/htmx.min.js static/js/htmx.min.js",
    "watch": "npm-watch"
  },
  "packageManager": "yarn@4.2.1",
  "devDependencies": {
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.4.3"
  },
  "dependencies": {
    "htmx.org": "^1.9.12",
    "npm-watch": "^0.12.0"
  }
}
