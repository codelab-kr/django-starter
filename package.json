{
  "watch": {
    "build": {
      "patterns": [
        "posts",
        "acts"
      ],
      "extensions": "html",
      "quiet": false
    }
  },
  "scripts": {
    "tailwind": "tailwind build -i ./static/css/tailwind.css -o ./static/css/style.css --watch",
    "minify": "cleancss ./static/css/style.css -o ./static/css/style.min.css",
    "build": "postcss static/css/main.css -o static/css/main.min.css; cp node_modules/htmx.org/dist/htmx.min.js static/js/htmx.min.js",
    "watch": "npm-watch"
  },
  "packageManager": "yarn@4.2.1",
  "devDependencies": {
    "autoprefixer": "^10.4.19",
    "htmlhint": "^1.1.4",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.3"
  },
  "dependencies": {
    "clean-css-cli": "^5.6.3",
    "htmx.org": "^1.9.12",
    "npm-watch": "^0.12.0"
  }
}
